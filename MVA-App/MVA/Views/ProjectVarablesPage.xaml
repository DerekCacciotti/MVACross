<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MVA.ProjectVarablesPage">
    <ContentPage.Content>

            <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
               <Label Text="What are you going to measure?"></Label>
                <Entry x:Name="txtDependentVarable" Placeholder="Dependent variable"></Entry>

                <Label Text="Upper limit of the outcome variable"></Label>
                <Entry x:Name="txtUpperLimit" Keyboard="Numeric"></Entry>

              
               
                <Button Grid.Row="1" Text="Next" x:Name="btnVarablesNext" Clicked="btnVarablesNext_Clicked" ></Button>
            </StackLayout>
             </Grid>

    </ContentPage.Content>
</ContentPage>
